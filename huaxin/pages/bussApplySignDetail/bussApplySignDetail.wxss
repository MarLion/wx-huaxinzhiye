.sign-container{
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.border-list{
  border-bottom: 1rpx solid #c9bfbfa4;
  padding-bottom: 30rpx;
}
.account-input{
  padding-left: 30rpx;
  width: 90%;
  margin: 30rpx auto;
  border: 1px solid #999999;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
}
.account-btn{
  width: 100%;
  margin: 0 auto;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}
.btn-container{
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.scoll-h{
  height: 100%;
}
.slide-image{
  width: 100%;
  height: 300rpx;
}